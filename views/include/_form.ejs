<!-- Form hadndelling -->

<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
      <div class="form-group">
        <label for="name" class="text-dark">Name</label>
        <input type="hidden" id="name" value="" />
        <input type="text" name="name" value="" placeholder="Mukesh Mahara" />
      </div>
      <div class="form-group">
        <label for="email" class="text-dark">Email</label>

        <input
          type="text"
          name="email"
          id="email"
          value=""
          placeholder="example@gmail.com"
        />
      </div>

      <div class="form-group">
        <label for="gender" class="text-dark">Gender</label>
        <div class="radio inline">
          <input type="radio" id="genderMale" name="gender" value="Male" />
          <label for="genderMale" class="radio-label">Male</label>
        </div>
        <div class="radio inline">
          &nbsp;
          <input
            type="radio"
            id="genderFemale"
            name="gender"
            value="Female"
          />
          <label for="genderFemale" class="radio-label"> Female</label>
        </div>
      </div>

      <div class="form-group">
        <label for="status" class="text-dark">Status &nbsp;</label>
        <div class="radio inline">
          <input
            type="radio"
            id="statusActive"
            name="status"
            value="active"
          />
          <label for="statusActive" class="radio-label">Active</label>
        </div>
        <div class="radio inline">
          <input
            type="radio"
            id="statusInactive"
            name="status"
            value="Inactive"
          />
          <label for="statusInactive" class="radio-label">Inactive</label>
        </div>
      </div>

      <div class="form-group">
        <input type="submit" class="btn text-dark update" value="Save" />
      </div>
    </div>
  </form>